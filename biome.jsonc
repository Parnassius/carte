{
  "linter": {
    "rules": {
      "all": true,
      "suspicious": {
        "noConsole": {
          "options": {
            "allow": ["error", "info", "warn"],
          },
        },
        "useErrorMessage": "off",
      },
    },
  },
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 88,  // Black's default
  },
  "css": {
    "formatter": {
      "enabled": true,
    },
  },
}
